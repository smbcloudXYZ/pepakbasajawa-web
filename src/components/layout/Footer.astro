---
import { SITE } from '@/config'
const today = new Date()
---

<footer>
  <div class="footer-content">
    <div class="footer-links">
      <nav class="footer-nav">
        <a href="/contact">Contact</a>
        <a href="/privacy-policy">Privacy Policy</a>
        <a href="/terms-of-use">Terms of Use</a>
      </nav>
    </div>
    <div class="footer-bottom">
      <div class="copyright">
        <span class="date">
          &copy;
          {today.getFullYear()}
        </span>
        <a href="https://5mb.app" target="__blank">{SITE.author}</a>
      </div>
      <div class="powered-by">
        Powered by{' '}
        <a href="https://smbcloud.xyz" target="__blank">smbCloud</a> |{' '}
        <a href="https://github.com/smbcloudXYZ/pepakbasajawa-web" target="__blank">Source</a>
      </div>
    </div>
  </div>
</footer>
<style>
  footer {
    font-size: var(--font-size-s);
    font-weight: var(--font-weight-light);
    line-height: 1.75;
    color: var(--text-secondary);
    margin-top: 4rem;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    width: 100%;
  }

  .footer-links {
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border);
  }

  .footer-nav {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .footer-nav a {
    color: var(--text-secondary);
    text-decoration: none;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    transition: all 0.2s ease-out;
  }

  .footer-nav a:hover {
    color: var(--text-primary);
    background-color: var(--code-bg);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
    flex-wrap: nowrap;
    width: 100%;
  }

  .copyright,
  .powered-by {
    white-space: nowrap;
  }

  .powered-by a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s ease-out;
  }

  .powered-by a:hover {
    color: var(--text-primary);
  }

  @media (max-width: 768px) {
    .footer-nav {
      gap: 1rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 0.75rem;
      text-align: center;
    }

    .copyright,
    .powered-by {
      white-space: normal;
    }
  }
</style>
